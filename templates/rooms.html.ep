<h1>Rooms</h1>

<hr />

<table>
    % foreach my $room ($rooms) {
    <tr>
        <td><a href="/room/<%= $room->slug %>"><%= $room->name %></a></td>
        <td><img class="thumbnail" src="/public/images/<%= $room->picture %>" /></td>
        <td><p><%= $room->description %></p></td>
        <td><%= $room->capacity %> Seats</td>
    </tr>
    % }
</table>
